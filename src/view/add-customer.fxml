<StackPane prefHeight="606.0" prefWidth="622.0" stylesheets="@program.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddCustomerController">
   <children>
      <Pane id="main-menu-background" />
      <GridPane>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label id="autocamper-desc" text="Customer Details" />
                  <TextField fx:id="txtfldFullName" promptText="Full Name" />
                  <TextField fx:id="txtfldPhoneNumber" layoutX="10.0" layoutY="283.0" promptText="Phone Number" />
                  <TextField fx:id="txtfldAddress" layoutX="10.0" layoutY="299.0" promptText="Address" />
                  <TextField fx:id="txtfldEmail" layoutX="10.0" layoutY="314.0" promptText="Email" />
               </children>
               <GridPane.margin>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </GridPane.margin>
            </VBox>
            <Button id="main-menu-item" mnemonicParsing="false" onAction="#btnHandleConfirm" text="Confirm" GridPane.columnIndex="1" />
         </children>
      </GridPane>
   </children>
